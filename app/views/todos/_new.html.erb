<%= simple_form_for [@team, @project, @todo] do |f| %>
  <%= f.input :title, :label => "新的任务" %>
  <%= f.input :description, :label => "任务描述" %>
  <%= select_tag(:user_id, options_for_select(@team.members.map { |c| [c.name, c.user_id] }), :prompt => "将任务指派给") %>
  <br><br>
  <div class='input-group date' id='datetimepicker1'>
    <input type='text' name="todo[deadline]" placeholder="指派截止日期" class="form-control" />
    <span class="input-group-addon">
       <span class="glyphicon glyphicon-calendar"></span>
    </span>
  </div>
  <br>
  <%= f.submit "添加任务", class: "btn btn-success" %>
<% end %>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker({
          format: 'YYYY-MM-DD'
       });
});
</script>
