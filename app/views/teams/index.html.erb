<div class="col-md-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>团队名称</th>
        <th>超级管理员</th>
        <th>创建时间</th>
        <th>管理团队</th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= link_to(team.name, team_path(team)) %></td>
          <td><%= team.user.user_name %></td>
          <td><%= team.created_at %></td>
          <td>
            <%= link_to("编辑", edit_team_path(team)) %> |
            <%= link_to("删除", team_path(team), method: :delete) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
